<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ro.hitup1_0.EnterNumber">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#ee5f5f"
        android:gravity="center"
        android:text="Enter your mobile number to let people hit you up!"
        android:id="@+id/number_enter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.digits.sdk.android.DigitsAuthButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="#ffee5f5f"
        android:textColor="#ffffffff"
        android:id="@+id/submit_button"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/number_enter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="25dp"
        android:text="(Skip)"
        android:textSize="15sp"
        android:id="@+id/skip"
        android:layout_below="@+id/submit_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
