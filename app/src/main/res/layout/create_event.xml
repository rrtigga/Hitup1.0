<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ro.hitup1_0.CreateEvent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/what_event"
        android:hint="What you tryna do?!"
        android:gravity="center"
        android:maxLength="20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:id="@+id/button"
        android:src="@drawable/study"
        android:layout_below="@+id/what_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:id="@+id/button2"
        android:src="@drawable/shop"

        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:src="@drawable/workout"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:id="@+id/button4"
        android:src="@drawable/movie"

        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:id="@+id/button5"
        android:src="@drawable/drink"

        android:layout_alignBottom="@+id/button4"
        android:layout_centerHorizontal="true" />

    <com.ro.design.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cb_color="#ffee5f5f"
        app:cb_pressedRingWidth="16dip"
        android:text="New Button"
        android:id="@+id/button6"
        android:src="@drawable/food"

        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Hitup!"
        android:textColor="#fff"
        android:background="#ffee5f5f"
        android:id="@+id/create_event_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_alignRight="@+id/what_event"
        android:layout_alignEnd="@+id/what_event"
        android:layout_alignLeft="@+id/what_event"
        android:layout_alignStart="@+id/what_event" />


</RelativeLayout>
